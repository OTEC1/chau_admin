<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cat_img"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                app:civ_border_color="#CACACA"
                app:civ_border_width="3dp" />


            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30dp" />


            <TextView
                android:id="@+id/cat_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@id/cat_img"
                android:layout_toRightOf="@id/cat_img"
                android:text="One is Counting" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/delete_post"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:background="@drawable/circle1"
                android:text="X" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/update_post"
                android:layout_width="53dp"
                android:layout_height="43dp"
                android:layout_below="@id/delete_post"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="37dp"
                android:layout_marginRight="10dp"
                android:background="@android:color/transparent"
                android:gravity="end"
                android:text="Update"
                android:textAlignment="viewEnd"
                android:textAllCaps="false" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</RelativeLayout>